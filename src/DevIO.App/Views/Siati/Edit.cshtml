@model DevIO.App.ViewModels.SiatiViewModel

@{
    ViewData["Title"] = "Editar Siati";
}

    <h1 style="padding-top:50px">Editar Siati</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Resolvido" /> @Html.DisplayNameFor(model => model.Resolvido)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Resolucao" class="control-label"></label>
                <input asp-for="Resolucao" class="form-control" />
                <span asp-validation-for="Resolucao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroProcesso" class="control-label"></label>
                <input asp-for="NumeroProcesso" class="form-control" />
                <span asp-validation-for="NumeroProcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCriacaoProcesso" class="control-label"></label>
                <input asp-for="DataCriacaoProcesso" class="form-control" />
                <span asp-validation-for="DataCriacaoProcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoProcesso" class="control-label"></label>
                <input asp-for="TipoProcesso" class="form-control" />
                <span asp-validation-for="TipoProcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeProcesso" class="control-label"></label>
                <input asp-for="NomeProcesso" class="form-control" />
                <span asp-validation-for="NomeProcesso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeUser" class="control-label"></label>
                <input asp-for="NomeUser" class="form-control" />
                <span asp-validation-for="NomeUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
